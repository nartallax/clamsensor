{
  "name": "@nartallax/clamsensor",
  "version": "2.0.7",
  "description": "A little testing framework",
  "author": "Nartallax",
  "license": "0BSD",
  "types": "clamsensor.d.ts",
  "bin": {
    "clamsensor_codegen": "clamsensor_codegen.cjs"
  },
  "bugs": "https://github.com/nartallax/clamsensor/issues",
  "repository": "github:nartallax/clamsensor",
  "module": "esmodule",
  "exports": {
    "import": "./esm/clamsensor.js",
    "require": "./cjs/clamsensor.js"
  },
  "scripts": {
    "dts": "npm run dts:generate && npm run dts:fix && npm run dts:cleanup",
    "dts:generate": "./node_modules/.bin/dts-bundle-generator -o target/tmp_clamsensor.d.ts --project tsconfig.json --export-referenced-types false --no-banner ts/src/clamsensor.ts",
    "dts:fix": "sed 's/export [*] from.*//g' target/tmp_clamsensor.d.ts | sed 's/export [{][}].*//g' > ./target/clamsensor.d.ts",
    "dts:cleanup": "rm target/tmp_clamsensor.d.ts",
    "typecheck": "cd ts && ../node_modules/typescript/bin/tsc --noEmit && cd - > /dev/null",
    "build": "npm run build:prepare && npm run dts && npm run build:esm && npm run build:cjs && npm run build:generator && npm run build:copy_static",
    "build:prepare": "rm -rf ./target && rm -rf ./dist && mkdir ./target",
    "build:esm": "./node_modules/.bin/parcel build --target release_esm --no-cache && cp -r ./dist/release_esm ./target/esm",
    "build:cjs": "./node_modules/.bin/parcel build --target release_cjs --no-cache && cp -r ./dist/release_cjs ./target/cjs",
    "build:generator": "./node_modules/.bin/parcel build --target generator --no-cache && cp ./dist/generator/clamsensor_codegen.js ./target/clamsensor_codegen.cjs && cp ./dist/generator/clamsensor_codegen.js.map ./target/clamsensor_codegen.cjs.map",
    "build:copy_static": "cp ./package.json ./target/ && cp ./LICENSE ./target/ && cp ./README.md ./target",
    "pub": "npm run build && npm run pub:publish",
    "pub:publish": "cd target && npm publish --access public && cd .."
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "dts-bundle-generator": "8.0.0",
    "eslint": "^7.30.0",
    "parcel": "^2.8.3",
    "typescript": "^5.0.3"
  },
  "targets": {
    "release_esm": {
      "source": "./ts/src/clamsensor.ts",
      "context": "node",
      "optimize": false,
      "isLibrary": true,
      "outputFormat": "esmodule"
    },
    "release_cjs": {
      "source": "./ts/src/clamsensor.ts",
      "context": "node",
      "optimize": false,
      "isLibrary": true,
      "outputFormat": "commonjs"
    },
    "generator": {
      "source": "./ts/src/clamsensor_codegen.ts",
      "context": "node",
      "optimize": false,
      "outputFormat": "commonjs"
    }
  }
}
